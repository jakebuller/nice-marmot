!!! 5

%html{:lang => 'en'}
%head
    %meta{:charset => 'utf-8'}
    %meta{'http-equiv' => 'X-UA-Compatible', :content => 'IE=Edge,chrome=1'}
    %meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1.0'}
    %title
        = content_for?(:title) ? yield(:title) : 'NiceMarmot'

    = csrf_meta_tags

    -# Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
        %script {:src => '//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js', :type => 'text/javascript'}

    -#Load the fonts we'll need
    = stylesheet_link_tag 'application', :media => 'all'

    -# For third-generation iPad with high-resolution Retina display:
    -# Size should be 144 x 144 pixels
    = favicon_link_tag 'apple-touch-icon-144x144-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144'

    -# For iPhone with high-resolution Retina display:
    -# Size should be 114 x 114 pixels
    = favicon_link_tag 'apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114'

    -# For first- and second-generation iPad:
    -# Size should be 72 x 72 pixels
    = favicon_link_tag 'apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72'

    -# For non-Retina iPhone, iPod Touch, and Android 2.1+ devices:
    -# Size should be 57 x 57 pixels
    = favicon_link_tag 'apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'

    -# For all other devices
    -# Size should be 32 x 32 pixels
    = favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'

    = javascript_include_tag 'application'

    %body
        %div.navbar.navbar-default
            %div.container-fluid.logo-container
                %a{href: products_path}
                    %div.logo
                        Tee Shits

        %div.container.main
            %div.row
                = bootstrap_flash
                = yield


        %div.container-fluid.mailing-container
            %div.row
                %div.col-md-2
                %div.col-md-8.centered
                    =form_tag controller: :mailing_addresses, action: :add do
                        %label.text Still not offended? Let's keep in touch!
                        =text_field :mailing_address, :email, placeholder: 'youremail@example.com'
                        =submit_tag "Subscribe", class: 'my-btn'
                %div.col-md-2

        %div.container-fluid.footer
            %div.row
                %div.col-md-4
                %div.col-md-4.text-center.text
                    =link_to 'About', about_path
                    =mail_to 'jake.r.buller@gmail.com', 'Contact'
                    %p &copy; 2015 Tee Shits Clothing
                %div.col-md-4
